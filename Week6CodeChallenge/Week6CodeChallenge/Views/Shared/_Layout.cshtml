<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>

        <div style="border:1px solid black">

            <div style="width: 49%; display:inline-block; border: 1px dashed black">
                <img src="http://cdn-img.easylogo.cn/gif/51/51700.gif" />
            </div>
            <div class="navLinks" style="text-align:right; width: 50%; display:inline-block; ">
                <span class="ajax-get" data-url="/Home/Index">HOME</span>  &nbsp; |   &nbsp;
                <span class="ajax-get" data-url="/About/Index">ABOUT</span>  &nbsp; |   &nbsp;
                <span class="ajax-get" data-url="/Work/Index">WORK</span>  &nbsp; |   &nbsp;
                <span class="ajax-get" data-url="/Home/Careers">CAREERS</span>  &nbsp; |   &nbsp;
                <span class="ajax-get" data-url="/Contact/Index">CONTACT</span>

            </div>
        </div>
    </header>
    <div id="content">
        @RenderBody()
    </div>

    <footer>
        <br />
        <div style="width: 49%; display:inline-block;">
            &copy; 2014 Kevin Barry
        </div>
        <div class="navLinks" style="text-align:right; width: 50%; display:inline-block; ">
            <span class="ajax-get" data-url="/Home/Index">HOME</span>  &nbsp; |   &nbsp;
            <span class="ajax-get" data-url="/About/Index">ABOUT</span>  &nbsp; |   &nbsp;
            <span class="ajax-get" data-url="/Work/Index">WORK</span>  &nbsp; |   &nbsp;
            <span class="ajax-get" data-url="/Home/Careers">CAREERS</span>  &nbsp; |   &nbsp;
            <span class="ajax-get" data-url="/Contact/Index">CONTACT</span>
        </div>

    </footer>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
